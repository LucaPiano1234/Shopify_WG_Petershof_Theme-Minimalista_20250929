{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- liquid
	assign one_image = false

	assign desktop_image = blank
	assign mobile_image = blank
	if section.settings.image != blank and section.settings.mobile_image == blank
		assign one_image = true
		assign section_image = section.settings.image
		assign desktop_image = section.settings.image
		assign mobile_image = section.settings.image
	elsif section.settings.image == blank and section.settings.mobile_image != blank
		assign one_image = true
		assign section_image = section.settings.mobile_image
		assign desktop_image = section.settings.mobile_image
		assign mobile_image = section.settings.mobile_image
	elsif section.settings.image != blank and section.settings.mobile_image != blank
		assign desktop_image = section.settings.image
		assign mobile_image = section.settings.mobile_image
	endif

	if section.settings.image_ratio_mobile != 'adapt' and section.settings.image_ratio_mobile != 'recommended'
		assign aspect_ratio_mobile = section.settings.image_ratio_mobile | split: '/'
		assign temp_mobile = aspect_ratio_mobile[0] | append: '.0'
		assign padding_bottom_mobile = aspect_ratio_mobile[1] | divided_by: temp_mobile | times: 100 | round: 2
	elsif section.settings.image_ratio_mobile == 'adapt'
		assign padding_bottom_mobile = 1 | divided_by: mobile_image.aspect_ratio | times: 100 | round: 2
	else
		assign padding_bottom_mobile = 0
	endif

	if section.settings.image_ratio != 'adapt'
		assign aspect_ratio_desktop = section.settings.image_ratio | split: '/'
		assign temp_desktop = aspect_ratio_desktop[0] | append: '.0'
		assign padding_bottom_desktop = aspect_ratio_desktop[1] | divided_by: temp_desktop | times: 100 | round: 2
	elsif section.settings.image_ratio == 'adapt'
		assign padding_bottom_desktop = 1 | divided_by: desktop_image.aspect_ratio | times: 100 | round: 2
	else
		assign padding_bottom_desktop = 0
	endif

	assign widths = '360, 533, 720, 940, 1066, 1200, 1400, 1600, 1800, 2000, 2200, 2400, 2600, 2800, 3000, 3200, 3400, 3584, 3800, 4000, 4200, 4400, 4600, 4800, 5000, 5200, 5400, 5600'
	assign has_desktop_image = false
	if section_image != blank or desktop_image != blank
		assign has_desktop_image = true
	endif
-%}

{% style %}
	 {%- if section.settings.image_ratio == 'adapt' and has_desktop_image == true -%}
	  @media screen and (min-width: 750px) {
	      #Banner-{{ section.id }}.image--overlay::before, #Banner-{{ section.id }} .banner__media::before {
	        content: '';
	        display: block;
	        padding-bottom: {{ padding_bottom_desktop }}%;
	    }
	  }
	{%- elsif section.settings.image_ratio == 'adapt' and has_desktop_image == false -%}
	  @media screen and (min-width: 750px) {
	      #Banner-{{ section.id }}.image--overlay::before, #Banner-{{ section.id }} .banner__media::before {
	        content: '';
	        display: block;
	        padding-bottom: 25%;
	    }
	}
	{% else %}
	  @media screen and (min-width: 750px) {
	    #Banner-{{ section.id }}.image--overlay::before,
	      #Banner-{{ section.id }} .banner__media::before {
	      content: '';
	      display: block;
	      padding-bottom: {{ padding_bottom_desktop }}%;
	    }
	  }
	{%- endif -%}
{% endstyle %}

{% if section.settings.opacity_overlay == 0 %}
	{% style %}
		  [data-scheme='dark'] {
			#Banner-{{ section.id }} .banner__overlay {
				background-color: rgba(var(--color-overlay), 0.4);
			}
		}
		  @media (prefers-color-scheme: dark) {
		    [data-scheme='auto'] {
				#Banner-{{ section.id }} .banner__overlay {
					background-color: rgba(var(--color-overlay), 0.4);
				}
			}
		  }
	{% endstyle %}
{% endif %}

{% style %}
	 {% render 'section-margin' %}
	 @media screen and (min-width: 750px) {
		#Banner-{{ section.id }} .banner__overlay {
			background-color: rgba(var(--color-overlay), {{ section.settings.opacity_overlay }});
		}
	}
{% endstyle %}

<div class='image-banner {% if section.settings.full_width %}{% else %}container{% endif %}'>
	<div
		id='Banner-{{ section.id }}'
		class='banner banner--{{ section.settings.image_ratio }} image--overlay banner--{{ section.settings.text_align }} {% if section.settings.full_width %}banner--container{% else %}{% endif %} color-{{ section.settings.color_scheme }} background'>
		{%- if section.settings.image != blank or section.settings.mobile_image != blank -%}
			<div
				class='banner__media media banner__media--{{ section.settings.image_ratio_mobile }} '
				{% if section.settings.image_ratio_mobile != 'recommended'
					and section.settings.image_ratio_mobile != 'adapt'
				%}
					style='--padding-bottom-mobile: {{ padding_bottom_mobile }}%;'
				{% endif %}>
				{% liquid
					# get desktop calc ratio
					if section.settings.image_ratio != 'adapt'
						assign settings_desktop_aspect_ratio = temp_desktop | divided_by: aspect_ratio_desktop[1] | round: 2
					else
						assign settings_desktop_aspect_ratio = desktop_image.aspect_ratio
					endif

					assign calc_ratio_desktop = 1
					if desktop_image.aspect_ratio > settings_desktop_aspect_ratio
						assign calc_ratio_desktop = desktop_image.aspect_ratio | divided_by: settings_desktop_aspect_ratio | round: 2
					endif

					# get mobile calc ratio
					if section.settings.image_ratio_mobile != 'adapt' and section.settings.image_ratio_mobile != 'recommended'
						assign settings_mobile_aspect_ratio = temp_mobile | divided_by: aspect_ratio_mobile[1] | round: 2
					elsif section.settings.image_ratio_mobile == 'adapt'
						assign settings_mobile_aspect_ratio = mobile_image.aspect_ratio
					endif

					assign calc_ratio_desktop = 1
					if desktop_image.aspect_ratio > settings_desktop_aspect_ratio
						assign calc_ratio_desktop = desktop_image.aspect_ratio | divided_by: settings_desktop_aspect_ratio | round: 2
					endif

					assign calc_ratio_mobile = 1
					assign calc_ratio_mobile_demo = 1
					assign image_sizes_mobile = ''
					if section.settings.image_ratio_mobile != 'recommended'
						if mobile_image.aspect_ratio > settings_mobile_aspect_ratio
							assign calc_ratio_mobile = mobile_image.aspect_ratio | divided_by: settings_mobile_aspect_ratio | round: 2
						endif
						assign image_sizes_mobile = 'calc((100vw - 2* 2rem) * ' | append: calc_ratio_mobile | append: ')'
					else
						if mobile_image.aspect_ratio > 2.14
							assign calc_ratio_mobile = mobile_image.aspect_ratio | divided_by: 2.14 | round: 2
						endif
						if mobile_image.aspect_ratio > 1.28
							assign calc_ratio_mobile_demo = mobile_image.aspect_ratio | divided_by: 1.38 | round: 2
						endif
						assign image_sizes_mobile = '(min-width: 375px) calc((100vw - 2 * 2rem) * ' | append: calc_ratio_mobile | append: '), calc((100vw - 2 * 2rem) * ' | append: calc_ratio_mobile_demo | append: ')'
					endif

					assign image_loading = 'lazy'
					assign fetch_priority = 'auto'
					if section.index == 1
						assign image_loading = 'eager'
						assign fetch_priority = 'high'
					endif
				%}
				{% capture image_styles %}
					object-fit: cover;
				{% endcapture %}
				{% capture image_sizes_desktop %} 
					(min-width: 1200px) calc((100vw - 2* 6.4rem) * {{ calc_ratio_desktop }}),(min-width: 750px) calc((100vw - 2* 2rem) * {{ calc_ratio_desktop }})
				{% endcapture %}
				{% if one_image %}
					{% liquid
						assign sizes = image_sizes_desktop | append: ', ' | append: image_sizes_mobile
					%}
					{{
						section_image
						| image_url: width: section_image.width
						| image_tag:
							width: section_image.width,
							height: section_image.height,
							loading: image_loading,
							widths: widths,
							sizes: sizes,
							style: image_styles,
							fetchpriority: fetch_priority
					}}
				{% else %}
					{{
						desktop_image
						| image_url: width: desktop_image.width
						| image_tag:
							width: desktop_image.width,
							height: desktop_image.height,
							widths: widths,
							sizes: image_sizes_desktop,
							style: image_styles,
							class: 'desktop--image',
							loading: image_loading,
							fetchpriority: fetch_priority
					}}
					{{
						mobile_image
						| image_url: width: mobile_image.width
						| image_tag:
							width: mobile_image.width,
							height: mobile_image.height,
							widths: widths,
							class: 'mobile--image',
							sizes: image_sizes_mobile,
							style: image_styles,
							loading: image_loading,
							fetchpriority: fetch_priority
					}}
					{% comment %}
						 <picture>
							<source
								srcset='{% for width in widths_arr %}{{ section.settings.mobile_image | image_url: width: width }} {{ width }}w{% if forloop.last == false %}, {% endif %}{% endfor %}'
								media='(max-width: 575px)'
								sizes='{{ sizes }}'>
							<source
								srcset='{% for width in widths_arr %}{{ section.settings.image | image_url: width: width }} {{ width }}w{% if forloop.last == false %}, {% endif %}{% endfor %}'
								media='(min-width: 576px)'
								sizes='{{ sizes }}'>
							<img
								src='{{ section.settings.image | image_url: width: section.settings.image.width }}'
								alt='{{ section.settings.image.alt }}'
								width='100%'
								height='100%'
								class='img'
								sizes='{{ sizes }}'
								loading='lazy'
								fetchpriority='high'
								style='--focal_point_desktop: {{ section.settings.image.presentation.focal_point }}; --focal_point_mobile: {{ section.settings.mobile_image.presentation.focal_point }};'>
						</picture>
					{% endcomment %}
				{% endif %}
				<span class='banner__overlay'></span>
			</div>
		{%- endif -%}
		{%- if section.settings.subheading != blank
			or section.settings.heading != blank
			or section.settings.text_information != blank
			or section.settings.additional_text != blank
			or section.settings.additional_image != blank
			or section.settings.show_view_all
			and section.settings.button_label != blank
		-%}
			<div class='image-banner__wrapper image-banner__wrapper--{{ section.settings.text_width }} {% if section.settings.full_width %}container{% else %}{% endif %}'>
				{%- if section.settings.subheading != blank -%}
					<div class='image-banner__subheading subtitle'>
						{{ section.settings.subheading }}
					</div>
				{%- endif -%}
				{%- if section.settings.heading != blank -%}
					<h2 class='image-banner__heading title--section title--decorate title--section-mt-none {{ section.settings.heading_size }}'>
						{{ section.settings.heading }}
					</h2>
				{%- endif -%}

				{%- if section.settings.text_information != blank
					or section.settings.additional_text != blank
					or section.settings.additional_image != blank
					or section.settings.show_view_all
				-%}
					<div class='image-banner__information'>
						{%- if section.settings.text_information != blank -%}
							<div class='image-banner__text'>
								{{ section.settings.text_information }}
							</div>
						{%- endif -%}

						{%- if section.settings.show_view_all and section.settings.button_label != blank -%}
							<a
								{% if section.settings.button_link != blank %}
									href='{{ section.settings.button_link }}'
								{% endif %}
								class='button image-banner__button button--{{ section.settings.button_style }} focus-inset'
								{% if section.settings.button_link == blank %}
									aria-disabled='true'
								{% endif %}>
								{{- section.settings.button_label | escape -}}
							</a>
						{%- endif -%}
						{%- if section.settings.additional_text != blank
							or section.settings.additional_image != blank
						-%}
							<div class='image-banner__information-additional'>
								{%- if section.settings.additional_text != blank -%}
									<div class='image-banner__subheading image-banner__subheading--additional card__subtitle subtitle'>
										{{ section.settings.additional_text }}
									</div>
								{%- endif -%}
								{% if section.settings.additional_image != blank %}
									<div class='image-banner__image-additional'>
										<img
											srcset='{{ section.settings.additional_image | image_url: width: 200 }} 1x, {{ section.settings.additional_image | image_url: width: 400 }} 2x'
											src='{{ section.settings.additional_image | image_url: width: 200 }}'
											width='200'
											height='auto'
											loading='lazy'>
									</div>
								{% endif %}
							</div>
						{%- endif -%}
					</div>
				{%- endif -%}
			</div>
		{% endif %}
	</div>
</div>

