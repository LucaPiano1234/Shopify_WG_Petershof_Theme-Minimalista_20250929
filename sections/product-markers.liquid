{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-card-horizontal.css' | asset_url | stylesheet_tag }}
{{ 'section-product-markers.css' | asset_url | stylesheet_tag }}

<script src="{{ 'product-markers.js' | asset_url }}" defer="defer"></script>

{%- if settings.quickview_show or settings.show_on_mobile or settings.type_color_swatch == 'custom' -%}
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{% endif %}

{%- if settings.quickview_show or settings.show_on_mobile -%}
  <link rel="stylesheet" href="{{ 'component-deferred-media.css' | asset_url }}" media="all">
  <link
    rel="preload"
    href="{{ 'quick-add.css' | asset_url }}"
    as="style"
    onload="this.onload=null;this.rel='stylesheet'"
  >
{%- endif -%}

{% assign padding_bottom = 0 %}
{% if section.settings.aspect_ratio != 'adapt' %}
  {% liquid
    assign aspect_ratio = section.settings.aspect_ratio | split: '/'
    assign temp = aspect_ratio[0] | append: '.0'
    assign padding_bottom = aspect_ratio[1] | divided_by: temp | times: 100 | round: 2
  %}
{% else %}
  {% if section.settings.image != blank %}
    {% assign padding_bottom = 1 | divided_by: section.settings.image.aspect_ratio | times: 100 | round: 2 %}
  {% else %}
    {% assign padding_bottom = 56.25 %}
  {% endif %}
{% endif %}

{%- style -%}
  {% render 'section-margin' %}

  .section-{{ section.id }}-padding .product-markers__markers {
  	padding-bottom: {{ padding_bottom }}%;
  }
{%- endstyle -%}

<div class="product-markers section-{{ section.id }}-padding">
  <div class="container">
    {%- if section.settings.subheading != blank -%}
      <span class="product-markers__subheading subheading--section subtitle">
        {{ section.settings.subheading }}
      </span>
    {% endif %}
    {%- if section.settings.heading != blank -%}
      <h2 class="{{ section.settings.heading_size }} product-markers__title title--section">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
  </div>

  <div class="content">
    <div
      class="product-markers-for-mobile"
    >
      {%- for block in section.blocks -%}
        <div
          class="product-markers__item-inner js-product-markers__item-inner color-background-2
          {% if block.settings.product_id == blank %} product-markers__item_ph {% endif %}"
          data-index="{{ forloop.index }}"
        >
          {% if block.settings.product_id != blank %}
            {% render 'product-card-horizontal',
              product_card_product: block.settings.product_id,
              media_size: section.settings.image_ratio,
              show_vendor: section.settings.show_vendor,
              quick_view: true,
              mobile: true
            %}
          {% else %}
            {% assign collection_index = forloop.index0 | modulo: 4 | plus: 1 %}
            {% render 'product-card-placeholder', media_size: section.settings.image_ratio, collection_index: collection_index %}
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <div
      class="product-markers__markers"
    >
      {%- for block in section.blocks -%}
        <div data-index="{{ forloop.index }}" class="product-markers__item js-product-markers__item color-background-1" 
          {{ block.shopify_attributes }} 
          style="top: {{ block.settings.position_y }}%; left:{{ block.settings.position_x }}%">
          <div class="product-markers__item-number">
            <span class="product-markers__item-number-inner"></span>
          </div>
            <div data-index="{{ forloop.index }}" 
              class="product-markers__item-inner js-product-markers__item-inner 
              product-markers__item-inner--{{ block.settings.tooltip_open_position }} 
              {% if block.settings.product_id != blank %}collection-product-card {% else %} product-markers__item_ph {% endif %}">
              {% if block.settings.product_id != blank %}
                {% render 'product-card-horizontal',
                  product_card_product: block.settings.product_id,
                  media_size: section.settings.image_ratio,
                  show_vendor: section.settings.show_vendor,
                  quick_view: true
                %}
              {% else %}
                {% assign collection_index = forloop.index0 | modulo: 4 | plus: 1 %}
                {% render 'product-card-placeholder', media_size: section.settings.image_ratio, collection_index: collection_index %}
              {% endif %}
            </div>
        </div>
      {% endfor %}

      {% if section.settings.image != blank %}
        {% capture sizes %}
          100vw
        {% endcapture %}
        {{
          section.settings.image
          | image_url: width: section.settings.image.width
          | image_tag:
            loading: 'lazy',
            widths: '360, 535, 720, 940, 1100, 1200, 1440, 1600, 1800, 2000, 2100, 2200, 2880, 3200, 3600, 3800',
            sizes: sizes,
            class: 'product-markers__image'
        }}
      {% elsif section.settings.image == blank %}
        <div class="product-markers__placeholder">
          {{
            'collection-apparel-3'
            | placeholder_svg_tag: 'product-markers__placeholder-svg placeholder-svg'
          }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

